# syntax=docker/dockerfile:1
FROM golang:1.22-alpine AS builder

WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o /resolver ./cmd/resolver

# --- runtime ---
FROM alpine:3.20
RUN apk add --no-cache ca-certificates tzdata
WORKDIR /app

COPY --from=builder /resolver /app/resolver
COPY configs/resolver.yaml /app/configs/resolver.yaml

EXPOSE 9090
ENTRYPOINT ["/app/resolver"]
